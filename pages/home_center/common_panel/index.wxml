<!--标题-->

<image class="common-panel-backgroud" />
<navbar device_name="AI插头" bind:jumpTodeviceEditPage="jumpTodeviceEditPage" />

<!--电源指示-->

<view class='top_col'>
	<view class='top_block'>
    <image class="top_image" src='/image/power.png'></image>
    <view class="top_content">开启</view>
	</view>
</view>

<!--功率面板-->

<view class='center_col'>
	<view class='center_block'>
    <view>耗电量</view>
    <view>0.0W*h</view>
	</view>
	<view class='center_block'>
    <view>时长</view>
    <view>0.0hour</view>
	</view>
	<view class='center_block'>
    <view>电流</view>
    <view>0mA</view>
	</view>
</view>

<!--底部 按钮-->
<view class='bottom_col'>
	<view class='bottom_block'>
		<image class="bottom_image" src='/image/swich.ico'></image>
		<view>开关</view>
	</view>
	<view class='bottom_block'>
		<image class="bottom_image" src='/image/alarm.png'></image>
		<view>倒计时</view>
	</view>
	<view class='bottom_block'>
		<image class="bottom_image" src='/image/tara.png'></image>
		<view>定时</view>
  </view>
</view>